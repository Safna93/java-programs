
public class PerfectDisplay
{
public static void main(String[] args)
{
	int i,j,limit=100,sum=1;
	System.out.println("the perfect numbers are");
	
	for(i=2;i<=limit;i++)
	{sum=1;
		
		for(j=2;j<i;j++)
		{
			if(i%j==0)
			{
				sum=sum+j;
			
			
			
		}
			if(i==sum)
			{
		System.out.println(i+"");
	}
	}
}
}
}




